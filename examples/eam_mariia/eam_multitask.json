{
    "Verbosity": {
        "level": 2
    },
    "Dataset": {
        "name": "NiPt",
        "path": {"total": "dataset/atoms256_filtered_enthalpy"},
        "format": "CFG",
        "compositional_stratified_splitting": true,
	"rotational_invariance": true,
        "node_features": {
            "name": ["num_of_protons","c_peratom", "masses", "forces"],
            "dim": [1, 1, 1, 3],
            "column_index": [0, 1, 2, 3]
        },
        "graph_features":{
            "name": [ "formation_energy"],
            "dim": [1],
            "column_index": [0]
        }
    },
    "NeuralNetwork": {
        "Architecture": {
            "model_type": "PNA",
            "radius": 3.0,
            "max_neighbours": 100000,
	    "edge_features": ["lengths"],
	    "periodic_boundary_conditions": true,
            "hidden_dim": 50,
            "num_conv_layers": 6,
            "output_heads": {
                "graph":{
                    "num_sharedlayers": 2,
                    "dim_sharedlayers": 100,
                    "num_headlayers": 2,
                    "dim_headlayers": [50,50]
                },
                "node": {
                    "num_headlayers": 2,
                    "dim_headlayers": [50,50],
                    "type": "mlp"
                }
            },
            "task_weights": [1.0, 1.0]
        },
        "Variables_of_interest": {
            "input_node_features": [0],
            "output_names": ["formation_energy", "forces"],
            "output_index": [0, 3],
            "type": ["graph", "node"],
            "denormalize_output": true
        },
        "Training": {
            "num_epoch": 50,
            "perc_train": 0.9,
            "loss_function_type": "mse",
            "batch_size": 64,
            "continue": 0,
            "Optimizer": {
                "type": "AdamW",
                "learning_rate": 1e-3
            }
        }
    },
    "Visualization": {
        "plot_init_solution": true,
        "plot_hist_solution": false,
        "create_plots": true
    }
}
